@model IEnumerable<Proyecto_Hotel_California.Models.TB_EMPLEADO>

@{
    ViewBag.Title = "ListarEmpleados";
}

<h2>ListarEmpleados</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOM_EMP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.APE_EMP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FEC_NAC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TELEFONO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DIRECCION)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_EMP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.APE_EMP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEC_NAC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TELEFONO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIRECCION)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarEmpleado", new {  id=item.COD_EMP }) 
        </td>
    </tr>
}

</table>
